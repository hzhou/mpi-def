include: c/mpi.def

page: hello, basic_frame
    module: c
    run: mpirun -np 4 out/hello

    $print Hello world from $s_mpi_name, $n_mpi_id/$n_mpi_size

    $local tn_data
    &call mpi_send, 0, 1, &tn_data, MPI_INT, 1
        &call pack
            tn_data = rand()
        &call unpack
            $print Node $(to): received data from node $(from): $tn_data

