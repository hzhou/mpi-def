include: c/mpi.def

page: test_isend, mpi_frame
    module: c
    exe: mpiexec -np 4 out/test_isend

    $call hello

    $local tn_data

    $(set:data=&tn_data, 1, MPI_INT)
    &call mpi_isend, 1, 0
        $(block:send...)
            $include time
            tn_data = mpi_id*1000+time(NULL)%100
        $(block:recv...)
            $print Node $(to): received data from node $(from): $tn_data

        $(block:sending...)
            $print proc $mpi_id sending ...
        $(block:recving...)
            $print proc $mpi_id recving ...

